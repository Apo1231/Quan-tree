<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="900.0" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.utez.fintree.integradora_final.controller.InicioController">
    <top>
        <HBox alignment="CENTER" prefHeight="60.0" spacing="15.0" style="-fx-background-color: #eaf4ea; -fx-background-radius: 10;">
            <BorderPane.margin>
                <Insets left="20.0" right="20.0" top="10.0" />
            </BorderPane.margin>
            <padding>
                <Insets left="20.0" right="20.0" />
            </padding>

            <Button onAction="#handleMenuInicio" style="-fx-background-color: #6aa84f; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-weight: bold;" text="Inicio" />
            <Button onAction="#handleMenuAhorros" style="-fx-background-color: transparent; -fx-font-weight: bold;" text="Ahorros" />
            <Button onAction="#handleMenuGastos" style="-fx-background-color: transparent; -fx-font-weight: bold;" text="Gastos" />
            <Button onAction="#handleMenuDeudas" style="-fx-background-color: transparent; -fx-font-weight: bold;" text="Deudas" />
            <Button onAction="#handleMenuPresupuesto" style="-fx-background-color: transparent; -fx-font-weight: bold;" text="Presupuesto" />
            <Button onAction="#handleMenuCategorias" style="-fx-background-color: transparent; -fx-font-weight: bold;" text="Categorías" />

            <Pane HBox.hgrow="ALWAYS" />

            <!-- ETIQUETA DE USUARIO AÑADIDA -->
            <Label fx:id="lblNombreUsuario" style="-fx-font-size: 12px; -fx-text-fill: #555555; -fx-font-weight: bold;" text="Usuario: Cliente" />

            <Button onAction="#handleCerrarSesion" style="-fx-background-color: #f8d7da; -fx-text-fill: #721c24; -fx-font-weight: bold; -fx-background-radius: 8; -fx-border-color: #f5c6cb; -fx-border-radius: 8; -fx-cursor: hand;" text="Cerrar Sesión">
                <HBox.margin>
                    <Insets left="10.0" />
                </HBox.margin>
            </Button>

            <HBox alignment="CENTER" style="-fx-background-color: transparent;">
                <ImageView fx:id="walletIconTop" fitHeight="36.0" fitWidth="36.0" pickOnBounds="true" preserveRatio="true" />
            </HBox>
        </HBox>
    </top>
    <center>
        <!-- El contenido del centro no cambia -->
        <VBox prefHeight="200.0" prefWidth="100.0" spacing="20.0">
            <padding>
                <Insets bottom="20.0" left="40.0" right="40.0" top="20.0" />
            </padding>
            <children>
                <Label text="Resumen del mes actual">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <HBox alignment="CENTER_LEFT" prefHeight="180.0" spacing="20.0" style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 10, 0, 0, 3);">
                    <padding>
                        <Insets bottom="15.0" left="25.0" right="25.0" top="15.0" />
                    </padding>
                    <children>
                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                            <Label text="Gastos totales" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #38761d;" />
                            <Label fx:id="lblMesActual" text="Mes 2025" textFill="#888888" />
                            <HBox alignment="CENTER_LEFT" spacing="10">
                                <ImageView fx:id="gastosIcon" fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true" />
                                <Label fx:id="lblTotalGastos" text="\$0.00 MXN">
                                    <font>
                                        <Font name="System Bold" size="28.0" />
                                    </font>
                                </Label>
                            </HBox>
                        </VBox>
                        <PieChart fx:id="pieChartGastos" labelsVisible="false" legendVisible="false" prefHeight="150.0" prefWidth="150.0" />
                        <VBox fx:id="leyendaGastos" alignment="CENTER_LEFT" spacing="5.0" />
                    </children>
                </HBox>
                <HBox alignment="CENTER_LEFT" prefHeight="180.0" spacing="20.0" style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 10, 0, 0, 3);">
                    <padding>
                        <Insets bottom="15.0" left="25.0" right="25.0" top="15.0" />
                    </padding>
                    <children>
                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                            <Label text="Ahorros totales del mes actual:" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #38761d;" />
                            <Label fx:id="lblMesActualAhorros" text="Mes 2025" textFill="#888888" />
                            <HBox alignment="CENTER_LEFT" spacing="10">
                                <ImageView fx:id="ahorrosIcon" fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true" />
                                <Label fx:id="lblTotalAhorros" text="\$0.00 MXN">
                                    <font>
                                        <Font name="System Bold" size="28.0" />
                                    </font>
                                </Label>
                            </HBox>
                        </VBox>
                        <PieChart fx:id="pieChartAhorros" labelsVisible="false" legendVisible="false" prefHeight="150.0" prefWidth="150.0" />
                        <VBox fx:id="leyendaAhorros" alignment="CENTER_LEFT" spacing="5.0" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </center>
</BorderPane>