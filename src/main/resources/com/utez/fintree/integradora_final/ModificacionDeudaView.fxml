<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<HBox alignment="CENTER" prefHeight="600.0" prefWidth="900.0" spacing="50.0" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.utez.fintree.integradora_final.controller.ModificacionDeudaController">
    <padding>
        <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
    </padding>
    <children>
        <VBox prefHeight="500.0" prefWidth="350.0" style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 10, 0, 0, 3);">
            <children>
                <BorderPane prefHeight="500.0" prefWidth="200.0">
                    <top>
                        <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="200.0">
                            <padding><Insets left="10.0" right="10.0" top="10.0" /></padding>
                            <children>
                                <Button fx:id="btnVolver" onAction="#handleVolver" style="-fx-font-size: 24px; -fx-background-color: transparent; -fx-cursor: hand;" text="←" />
                                <HBox HBox.hgrow="ALWAYS" />
                                <ImageView fx:id="walletImageView" fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true" />
                            </children>
                        </HBox>
                    </top>
                    <center>
                        <Label style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: #38761d;" text="Modificación de Deuda" textAlignment="CENTER" wrapText="true" BorderPane.alignment="CENTER" />
                    </center>
                </BorderPane>
            </children>
        </VBox>
        <VBox prefHeight="500.0" prefWidth="350.0" spacing="8.0" style="-fx-background-color: #eaf4ea; -fx-background-radius: 15;">
            <padding>
                <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
            </padding>
            <children>
                <Label text="Concepto (Acreedor)" />
                <TextField fx:id="txtConcepto" />
                <Label text="Fecha de deuda" />
                <DatePicker fx:id="pickerFechaInicio" prefWidth="350.0" />
                <Label text="Monto" />
                <TextField fx:id="txtMonto" />
                <Label text="Fecha Límite" />
                <DatePicker fx:id="pickerFechaLimite" prefWidth="350.0" />
                <Label text="Categoría" />
                <ComboBox fx:id="cmbCategoria" prefWidth="350.0" promptText="Selecciona una categoría..." />
                <Label text="Notas" />
                <TextField fx:id="txtNotas" />
                <Pane VBox.vgrow="ALWAYS" />
                <Button fx:id="btnGuardar" onAction="#handleGuardar" prefHeight="40.0" prefWidth="350.0" style="-fx-background-color: #6aa84f; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" text="Guardar Cambios" />
            </children>
        </VBox>
    </children>
</HBox>